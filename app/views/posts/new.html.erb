<h1>新規投稿</h1>

<%= form_with(model: @post, local: true) do |form| %>
    <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= form.label :content %>
        <%= form.text_area :content, class: 'form-control' %>
    </div>

    <%= form.submit '投稿', class: 'btn btn-success btn-custom' %>
<% end %>

<%= link_to '戻る', posts_path, class: 'btn btn-secondary btn-custom' %>
