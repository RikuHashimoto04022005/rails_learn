<h1><%= @post.title %></h1>
<p><%= @post.content %></p>

<p>
    <strong>Title:</strong>
    <%= @post.title%>
</p>

<p>
    <strong>Content:</strong>
    <%= @post.content%>
</p>

<% if @post.image.attached? %>
    <p>
        <strong>Image:</strong>
        <%= image_tag @post.image %>
    </p>
<% end %>

<%= link_to '投稿一覧へ戻る', posts_path, class: 'btn btn-primary btn-custom'%>
<%= link_to '編集', edit_post_path(@post), class: 'btn btn-primary btn-custom' %>
<%= link_to '削除', @post, method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-primary btn-custom' %>
